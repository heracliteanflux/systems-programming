[alias]
	co           = checkout
  lgs          = lg --show-signature
	# show all tracked files under branch `main` (long)
	ls           = ls-tree -r main --full-tree
	# show all historically tracked files
	lsa          = log --pretty=format: --name-only --diff-filter=A | sort - | sed '/^$/d'
	# show all tracked files under branch `main` (short)
	lss          = ls-tree -r main --name-only --full-tree
	praise       = blame
	st           = status -bs

  lg           = lg1
  lg1          = lg1-specific --all
  lg2          = lg2-specific --all
  lg3          = lg3-specific --all
  lg1-specific = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(auto)%d%C(reset)'
  lg2-specific = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(auto)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)'
  lg3-specific = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset) %C(bold cyan)(committed: %cD)%C(reset) %C(auto)%d%C(reset)%n''          %C(white)%s%C(reset)%n''          %C(dim white)- %an <%ae> %C(reset) %C(dim white)(committer: %cn <%ce>)%C(reset)'
[commit]
	gpgsign = true
[core]
	pager        = delta
	editor       = vim
	autocrlf     = input
	excludesfile = ~/.gitignore
[delta]
  side-by-side = true
  navigate     = true
  line-numbers = true
  light        = false
	pager        = cat
[diff]
  algorithm  = histogram # minimal,myers,patience
  colorMoved = default
	tool       = vimdiff
[filter "lfs"]
	process  = git-lfs filter-process
	required = true
	clean    = git-lfs clean -- %f
	smudge   = git-lfs smudge -- %f
[gpg]
  format = ssh
[gpg "ssh"]
  program            = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
	allowedSignersFile = ~/.ssh/allowed_signers
[init]
	defaultBranch = main
[interactive]
  diffFilter = delta --color-only
[merge]
  conflictstyle = diff3
[pager]
	branch = false
	reflog = false
	log    = false
[pull]
	rebase = false
[color]
	ui = true
[user]
	name       = DF
	email      = 30237354+heracliteanflux@users.noreply.github.com
  signingkey = ~/.ssh/id_ed25519_github_personal.pub
